# Open terminal emulator
super + Return
	kitty

# Launch command/app
super + d
	rofi -show run
super + a
	rofi -modi "drun" -show drun -theme apps

# Quit/Restart bspwm
super + shift + {e,r}
	bspc {quit,wm -r}

# Lock screen
super + l
	$HOME/.scripts/lockscreen_corrupted.sh

# Close currently focused window
super + shift + q
	bspc node -c

# Set the window state
super + {t,space,f}
	bspc node -t {tiled,floating,fullscreen}

# Focus the node in the given direction, swap the node in the given direction with the current one
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Contract a window by moving one of its side inward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -32 0,bottom 0 32,bottom 0 -32,right 32 0}

# Move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-16 0,0 16,0 -16,16 0}


######################## Application shortcuts ##########################
super + b
	firefox
super + c
	code
super + m
	spotify
super + shift + h
	$HOME/.scripts/toggle_polybar.sh
super + ctrl + p
	maim -m 1 ~/Screenshots/$(date +%s).png
super + ctrl + o
	maim -s -o | xclip -selection clipboard -t image/png
super + r
	feh --bg-fill --randomize ~/Pictures/wallpapers/

####################### Media Buttons ###############################
XF86AudioRaiseVolume
	pamixer --increase 2
XF86AudioLowerVolume
	pamixer --decrease 2
XF86AudioMute
	pamixer --toggle-mute
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

